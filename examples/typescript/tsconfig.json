{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "declaration": false,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "lib": [
            "es2015",
            "DOM",
            "ScriptHost"
        ],

        // this is required to prevent TypeScript picking up types from parent directories
        "types": [],
        "typeRoots": [ "./node_modules/@types" ]
    },
    "include": [
        "./src/**/*"
    ]
}